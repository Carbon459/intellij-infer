<idea-plugin>
    <id>de.thl.intellijinfer</id>
    <name>Infer Integration</name>
    <vendor email="friedrich.hudinjan@stud.th-luebeck.de">Friedrich Hudinjan</vendor>

    <description><![CDATA[
    IntelliJ Integration for Infer by Facebook Research
    ]]></description>

    <!-- please see http://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/plugin_compatibility.html
         on how to target different products -->
    <depends>com.intellij.modules.lang</depends>
    <depends optional="true" config-file="withCLion.xml">com.intellij.modules.clion</depends>

    <!-- Plugin's application components -->
    <application-components>
        <component>
            <!-- Component's interface class -->
            <interface-class>de.thl.intellijinfer.config.ConfigComponent</interface-class>
            <!-- Component's implementation class -->
            <implementation-class>de.thl.intellijinfer.config.ConfigComponentImpl</implementation-class>
        </component>
    </application-components>
    <extensions defaultExtensionNs="com.intellij">
        <!-- Add your extensions here -->
        <toolWindow id="Infer" icon="toolWindowIcon.svg" secondary="false" anchor="bottom" factoryClass="de.thl.intellijinfer.ui.MainToolWindowFactory"/>
        <projectService serviceImplementation="de.thl.intellijinfer.service.ResultParser"/>
        <configurationType implementation="de.thl.intellijinfer.run.InferConfigurationType"/>
        <fileDocumentManagerListener implementation="de.thl.intellijinfer.service.FileChangeCollector"/>
    </extensions>

    <actions>
        <group id="infer.menu" text="Infer" description="Infer Integration menu">
            <add-to-group group-id="MainMenu" anchor="last"/>
            <action id="infer.textboxes" class="de.thl.intellijinfer.actions.RunAction" text="Run" description="Runs Infer">
                <keyboard-shortcut keymap="$default" first-keystroke="control alt G" second-keystroke="C"/>
            </action>
        </group>
    </actions>
</idea-plugin>