<idea-plugin>
    <id>de.thl.intelijinfer</id>
    <name>Infer Integration</name>
    <vendor email="friedrich.hudinjan@stud.th-luebeck.de" url="http://www.th-luebeck.de">Friedrich Hudinjan</vendor>

    <description><![CDATA[
    InteliJ Integration for Infer by Facebook Research
    ]]></description>

    <!-- please see http://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/plugin_compatibility.html
         on how to target different products -->
    <!-- uncomment to enable plugin in all products
    <depends>com.intellij.modules.lang</depends>
    -->

    <!-- Plugin's application components -->
    <application-components>
        <component>
            <!-- Component's interface class -->
            <interface-class>de.thl.intelijinfer.config.ConfigComponent</interface-class>
            <!-- Component's implementation class -->
            <implementation-class>de.thl.intelijinfer.config.ConfigComponentImpl</implementation-class>
        </component>
    </application-components>
    <extensions defaultExtensionNs="com.intellij">
        <!-- Add your extensions here -->
        <toolWindow id="Infer" icon="toolWindowIcon.svg" secondary="false" anchor="bottom" factoryClass="de.thl.intelijinfer.ui.MainToolWindowFactory"/>
        <applicationService serviceImplementation="de.thl.intelijinfer.service.Installer"/>
        <projectService serviceImplementation="de.thl.intelijinfer.service.InferRunner"/>
        <projectService serviceImplementation="de.thl.intelijinfer.service.ResultParser"/>
    </extensions>

    <actions>
        <group id="infer.menu" text="Infer" description="Infer Integration menu">
            <add-to-group group-id="MainMenu" anchor="last"/>
            <action id="infer.textboxes" class="de.thl.intelijinfer.actions.RunAction" text="Run" description="Runs Infer"/>
        </group>
    </actions>
</idea-plugin>